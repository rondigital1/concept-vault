{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RunTrace",
  "type": "object",
  "required": ["id", "kind", "status", "steps", "startedAt"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "kind": {
      "type": "string",
      "enum": ["distill", "curate"]
    },
    "status": {
      "type": "string",
      "enum": ["running", "completed", "failed"]
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "type", "name", "status"],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "type": "string",
            "enum": ["agent", "tool", "llm", "flow"]
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["started", "completed", "failed"]
          }
        }
      }
    },
    "startedAt": {
      "type": "string",
      "format": "date-time"
    },
    "completedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}
